{application, beamai_core, [
    {description, "BeamAI Core - Kernel, Process, Graph 框架"},
    {vsn, "0.1.0"},
    {registered, [beamai_core_sup, beamai_http_pool, beamai_process_sup, beamai_process_pool, beamai_graph_pool, beamai_graph_sup]},
    {mod, {beamai_core_app, []}},
    {applications, [kernel, stdlib, jsx, uuid, hackney, poolboy]},
    {optional_applications, [gun, beamai_llm]},
    {env, [
        %% Process pool 配置（默认启用，大小 CPU*2）
        {process_pool_enabled, true},
        %% {process_pool_size, 16},
        %% {process_pool_max_overflow, 32},

        %% Graph pool 配置（默认启用，大小 CPU*2）
        {graph_pool_enabled, true},
        %% {graph_pool, #{size => 16, max_overflow => 32}},
        {graph_pool_timeout, 30000}
    ]},
    {modules, [
        %% OTP 应用
        beamai_core_app,
        beamai_core_sup,
        %% Facade 入口
        beamai,
        %% Kernel 核心
        beamai_kernel,
        beamai_tool,
        beamai_tool_behaviour,
        beamai_context,
        beamai_filter,
        beamai_result,
        beamai_prompt,
        llm_response,
        %% 行为接口
        beamai_chat_behaviour,
        beamai_http_behaviour,
        beamai_step_behaviour,
        %% HTTP 客户端
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool,
        %% Process Framework
        beamai_process,
        beamai_process_builder,
        beamai_process_engine,
        beamai_process_event,
        beamai_process_executor,
        beamai_process_runtime,
        beamai_process_step,
        beamai_process_step_transform,
        beamai_process_worker,
        beamai_process_state,
        beamai_process_store_behaviour,
        beamai_process_sup,
        %% JSON-RPC
        beamai_jsonrpc,
        %% SSE
        beamai_sse,
        %% 工具
        beamai_id,
        beamai_utils,
        %% Graph 核心
        beamai_graph,
        beamai_graph_node,
        beamai_graph_edge,
        %% Graph Builder
        beamai_graph_builder,
        beamai_graph_dsl,
        %% Graph State
        beamai_context_reducer,
        beamai_graph_command,
        beamai_graph_dispatch,
        %% Graph Engine + Runtime + Supervisor
        beamai_graph_engine,
        beamai_graph_runtime,
        beamai_graph_state,
        beamai_graph_sup,
        beamai_graph_engine_task,
        beamai_graph_engine_utils,
        beamai_graph_pool_worker,
        beamai_graph_compute,
        %% Pregel 数据结构（保留）
        beamai_pregel_graph,
        beamai_pregel_vertex,
        beamai_pregel_utils
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
