{application, beamai_core, [
    {description, "BeamAI Core - Kernel Framework"},
    {vsn, "0.1.0"},
    {registered, [beamai_core_sup, beamai_http_pool]},
    {mod, {beamai_core_app, []}},
    {applications, [kernel, stdlib, jsx, uuid, hackney]},
    {optional_applications, [gun, beamai_llm, beamai_tools]},
    {env, []},
    {modules, [
        %% Application
        beamai_core_app,
        beamai_core_sup,
        %% Facade
        beamai,
        %% Kernel
        beamai_kernel,
        beamai_function,
        beamai_plugin,
        beamai_context,
        beamai_filter,
        beamai_result,
        beamai_prompt,
        %% Behaviours
        beamai_behaviour,
        beamai_llm_behaviour,
        beamai_buffer_behaviour,
        beamai_http_behaviour,
        %% Data Types
        beamai_message,
        beamai_tool,
        beamai_types,
        %% Protocol
        beamai_jsonrpc,
        beamai_sse,
        %% Utils
        beamai_id,
        beamai_utils,
        beamai_callback_utils,
        beamai_state_utils,
        %% HTTP Client
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
