{application, beamai_core, [
    {description, "Agent Framework Core - Behaviours and Pure Functions"},
    {vsn, "0.1.0"},
    {registered, []},
    {applications, [
        kernel,
        stdlib,
        jsx,
        uuid,
        hackney
    ]},
    %% Gun 作为可选依赖，用于 HTTP/2 支持
    {optional_applications, [gun]},
    {env, [
        %% HTTP 后端配置（可选：beamai_http_hackney | beamai_http_gun）
        %% {http_backend, beamai_http_hackney}
    ]},
    {modules, [
        %% Behaviours
        beamai_behaviour,
        beamai_llm_behaviour,
        beamai_buffer_behaviour,
        beamai_http_behaviour,
        %% Data Types
        beamai_message,
        beamai_result,
        beamai_tool,
        beamai_types,
        %% Protocol (JSON-RPC, SSE)
        beamai_jsonrpc,
        beamai_sse,
        %% Utils
        beamai_utils,
        %% HTTP Client
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool,
        %% Graph Core
        graph,
        graph_builder,
        graph_dsl,
        graph_edge,
        graph_node,
        graph_runner,
        graph_send,
        graph_state,
        %% Pregel
        pregel,
        pregel_barrier,
        pregel_combiner,
        pregel_graph,
        pregel_master,
        pregel_partition,
        pregel_utils,
        pregel_vertex,
        pregel_worker,
        graph_compute,
        %% Graph Patterns
        graph_parallel_experts
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
