{application, beamai_core, [
    {description, "BeamAI Core - Kernel, Process, Graph 框架"},
    {vsn, "0.1.0"},
    {registered, [beamai_core_sup, beamai_http_pool, beamai_process_sup, beamai_process_pool, beamai_dispatch_pool]},
    {mod, {beamai_core_app, []}},
    {applications, [kernel, stdlib, jsx, uuid, hackney, poolboy]},
    {optional_applications, [gun, beamai_llm, beamai_memory]},
    {env, [
        %% Process pool 配置（默认启用，大小 CPU*2）
        {process_pool_enabled, true},
        %% {process_pool_size, 16},
        %% {process_pool_max_overflow, 32},

        %% Dispatch pool 配置（默认启用，大小 CPU*2）
        {dispatch_pool_enabled, true},
        %% {dispatch_pool, #{size => 16, max_overflow => 32}},
        {dispatch_timeout, 30000}
    ]},
    {modules, [
        %% OTP 应用
        beamai_core_app,
        beamai_core_sup,
        %% Facade 入口
        beamai,
        %% Kernel 核心
        beamai_kernel,
        beamai_tool,
        beamai_tool_behaviour,
        beamai_context,
        beamai_filter,
        beamai_result,
        beamai_prompt,
        llm_response,
        %% 行为接口
        beamai_llm_behaviour,
        beamai_http_behaviour,
        beamai_step_behaviour,
        %% HTTP 客户端
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool,
        %% Process Framework
        beamai_process,
        beamai_process_builder,
        beamai_process_event,
        beamai_process_executor,
        beamai_process_runtime,
        beamai_process_step,
        beamai_process_step_transform,
        beamai_process_worker,
        beamai_process_state,
        beamai_process_memory_store,
        beamai_process_store_behaviour,
        beamai_process_sup,
        %% JSON-RPC
        beamai_jsonrpc,
        %% SSE
        beamai_sse,
        %% 工具
        beamai_id,
        beamai_utils,
        %% Graph 核心
        graph,
        graph_node,
        graph_edge,
        %% Graph Builder
        graph_builder,
        graph_dsl,
        %% Graph State
        graph_state,
        graph_state_reducer,
        graph_command,
        graph_dispatch,
        %% Graph Runner
        graph_runner,
        graph_snapshot,
        %% Pregel 分布式计算
        pregel,
        pregel_master,
        pregel_worker,
        pregel_vertex,
        pregel_graph,
        pregel_partition,
        pregel_barrier,
        pregel_superstep,
        pregel_utils,
        pregel_retry,
        pregel_dispatch_worker,
        graph_compute
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
