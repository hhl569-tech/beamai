{erl_opts, [
    debug_info,
    warnings,
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_export_vars,
    warn_untyped_record
]}.

%% Umbrella 项目配置 - 仅保留核心模块
{project_app_dirs, [
    "apps/beamai_core",
    "apps/beamai_llm",
    "apps/beamai_memory",
    "apps/beamai_cognition"
]}.

{deps, [
    {jsx, "3.1.0"},
    {hackney, "1.20.1"},
    {gun, "2.1.0"},
    {uuid, "2.0.6", {pkg, uuid_erl}},
    {esqlite, "0.8.8"},
    {poolboy, "1.5.2"}
]}.

{shell, [
    {apps, [beamai_core, beamai_llm, beamai_memory, beamai_cognition]}
]}.

{relx, [
    {release, {beamai_framework, "1.0.0"}, [
        beamai_core,
        beamai_llm,
        beamai_memory,
        beamai_cognition,
        sasl
    ]},
    {mode, dev},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]},
        {erl_opts, [debug_info]}
    ]}
]}.

{project_plugins, [rebar3_proper, rebar3_ex_doc]}.

{ex_doc, [
    {extras, [
        {"README.md", #{title => "Overview"}},
        {"doc/ARCHITECTURE.md", #{title => "Architecture"}},
        {"doc/AGENT_MODULES.md", #{title => "Agent Modules"}}
    ]},
    {main, "README.md"},
    {source_url, "https://github.com/example/agent"},
    {api_reference, true}
]}.

{alias, [
    {check, [xref, dialyzer, eunit, ct]}
]}.
