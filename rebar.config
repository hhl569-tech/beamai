{erl_opts, [debug_info]}.

%% Umbrella 项目配置
{project_app_dirs, [
    "apps/beamai_core",
    "apps/beamai_llm",
    "apps/beamai_plugin",
    "apps/beamai_memory",
    "apps/beamai_agent",
    "apps/beamai_graph",
    "apps/beamai_mcp",
    "apps/beamai_a2a",
    "apps/beamai_rag",
    "apps/beamai_deepagent"
]}.

{deps, [
    {jsx, "3.1.0"},
    {hackney, "1.20.1"},
    {gun, "2.1.0"},
    {uuid, "2.0.6", {pkg, uuid_erl}},
    {esqlite, "0.8.8"},
    {poolboy, "1.5.2"}
]}.

{shell, [
    {apps, [beamai_core, beamai_plugin, beamai_llm, beamai_memory, beamai_agent, beamai_graph, beamai_mcp, beamai_a2a, beamai_rag, beamai_deepagent]}
]}.

{relx, [
    {release, {beamai_framework, "1.0.0"}, [
        beamai_core,
        beamai_plugin,
        beamai_memory,
        beamai_llm,
        beamai_agent,
        beamai_graph,
        beamai_mcp,
        beamai_a2a,
        beamai_rag,
        beamai_deepagent,
        sasl
    ]},
    {mode, dev},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]},
        {erl_opts, [debug_info]}
    ]}
]}.

{project_plugins, [rebar3_proper, rebar3_ex_doc]}.

{ex_doc, [
    {extras, [
        {"README.md", #{title => "Overview"}},
        {"doc/ARCHITECTURE.md", #{title => "Architecture"}},
        {"doc/AGENT_MODULES.md", #{title => "Agent Modules"}}
    ]},
    {main, "README.md"},
    {source_url, "https://github.com/example/agent"},
    {api_reference, true}
]}.

{alias, [
    {check, [xref, dialyzer, eunit, ct]}
]}.
